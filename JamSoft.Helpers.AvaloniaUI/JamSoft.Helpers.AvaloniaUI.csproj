<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <Description>A collection of general helpers for AvaloniaUI applications.</Description>
        <PackageDescription>A collection of general helpers for AvaloniaUI applications.</PackageDescription>
        <Copyright>JamSoft Solutions Ltd</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>avaloniaui, avalonia, mvvm, patterns, helpers</PackageTags>
        <PackageProjectUrl>https://jamsoft.github.io/JamSoft.Helpers/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/jamsoft/JamSoft.Helpers</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryBranch>master</RepositoryBranch>
        <PackageIcon>JamSoftLogo-Splat513x513.png</PackageIcon>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Company>JamSoft Solutions Ltd</Company>
        <Authors>JamesGreen</Authors>
        <Owners>JamesGreen</Owners>
        <Title>JamSoft AvaloniaUI Helper Library</Title>
        <PackageId>JamSoft.Helpers.AvaloniaUI</PackageId>
        <IncludeSymbols>false</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <DelaySign>false</DelaySign>
        <Version>1.2.2</Version>
        <PackageVersion>1.2.2</PackageVersion>
        <AssemblyVersion>1.2.2.0</AssemblyVersion>
        <FileVersion>1.2.2.0</FileVersion>
        <InformationalVersion>1.2.2.0-rel</InformationalVersion>
        <PublicSign>false</PublicSign>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <AssemblyOriginatorKeyFile>..\JamSoft.Helpers\JamSoft.Helpers.Sname.snk</AssemblyOriginatorKeyFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DebugType>portable</DebugType>
      <DocumentationFile>bin\Release\JamSoft.Helpers.AvaloniaUI.xml</DocumentationFile>
      <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
      <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\img\JamSoftLogo-Splat513x513.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Avalonia" Version="11.0.0" />
      <PackageReference Include="Avalonia.ReactiveUI" Version="11.0.0" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\JamSoft.Helpers\JamSoft.Helpers.csproj" />
    </ItemGroup>

</Project>
